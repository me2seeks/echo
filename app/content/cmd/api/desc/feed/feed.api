type (
	CreateFeedCommentReq {
		FeedID  int64  `path:"feedID"`
		Content string `json:"content"`
		Media0  string `json:"media0"`
		Media1  string `json:"media1"`
		Media2  string `json:"media2"`
		Media3  string `json:"media3"`
